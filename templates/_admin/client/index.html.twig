{% extends '_admin/_includes/index.html.twig' %}

{% block titre %}{{ menu.getRoute }}{% endblock %}

{% block page_content %}

    {% set new = menu.getRoute %}
    {#{{ dump(menu.getRoute) }}#}
    <!-- PAGE-HEADER -->
    <div class="page-header">
        <h1 class="page-title">{{ new |capitalize }}</h1>
        <div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Identification des clients</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ new | capitalize }}</li>
            </ol>
        </div>

    </div>
    <!-- PAGE-HEADER END -->
    <!-- Row -->
    <div class="row row-sm">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-10">

                </div>
                <div class="col-md-2">
                    <a class="btn btn-secondary bg-secondary-gradient mt-3 offset-7" {% if new !="admin" %} href="{{ path( new ~'_new') }}" {% endif%} {% if modal=="modal" %} data-bs-toggle="modal" data-bs-target="#extralargemodal" {% endif %}>
                        <i class="fe fe-plus"></i>Nouveau
                    </a>
                </div>
            </div><br>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ titre | capitalize }}</h3>

                </div>
                <div class="card-body">

                    <div class="tab-menu-heading">
                        <div class="tabs-menu">
                            <!-- Tabs -->
                            <ul class="nav panel-tabs panel-secondary">
                                <li><a href="#tab9" class="active" data-bs-toggle="tab"><span><i class="fe fe-user me-1"></i></span>Personne physique</a></li>
                                <li><a href="#tab10" data-bs-toggle="tab" class=""><span><i class="fe fe-calendar me-1"></i></span>Entreprises</a></li>

                            </ul>
                        </div>
                    </div>
                    <div class="panel-body tabs-menu-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab9">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered text-nowrap border-bottom">
                                        <thead>

                                        {% include '_admin/_tableau/header.html.twig' with {'tableau':tableau  }%}

                                        </thead>
                                        <tbody>
                                        {% for data in physique %}

                                            <tr>

                                                <td >
                                                    {{ data.nom }}
                                                </td>
                                                <td >
                                                    {{ data.prenom  }}
                                                </td>
                                                <td >
                                                    {{ data.email }}
                                                </td>
                                                <td >
                                                    {{ data.profession }}
                                                </td>
                                                <td >
                                                    {{ data.telPortable }}
                                                </td>
                                                {% include '_admin/_tableau/action.html.twig' with {'module':new ,'data':data }%}

                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab10">
                                <div class="table-responsive">
                                    <table id="example3" class="table table-bordered text-nowrap border-bottom">
                                        <thead>

                                        {% include '_admin/_tableau/header.html.twig' with {'tableau':tableau1  }%}

                                        </thead>
                                        <tbody>
                                        {% for data in moral %}
                                            <tr>
                                                <td >
                                                    {{ data.raisonSocial }}
                                                </td>
                                                <td >
                                                    {{ data.registreCommercial  }}
                                                </td>
                                                <td >
                                                    {{ data.boitePostal }}
                                                </td>
                                                <td >
                                                    {{ data.siteWeb }}
                                                </td>
                                                <td >
                                                    {{ data.telPortable }}
                                                </td>
                                                {% include '_admin/_tableau/action.html.twig' with {'module':new ,'data':data }%}

                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

{% endblock %}

